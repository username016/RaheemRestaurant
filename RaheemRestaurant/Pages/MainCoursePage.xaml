<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaheemRestaurant.Pages.MainCoursePage"
             Title="MainCoursePage">
    
    <VerticalStackLayout>
        <Label x:Name="greetingLabel"
               Text="{Binding FirstName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="20" >

            <Grid ColumnSpacing="10" RowSpacing="10"  RowDefinitions="*,*,*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*,*" >

                <Image Source="shawarma_image.jpg" WidthRequest="100" Grid.Column="0"/>
                <Label Text="Shawarma" Grid.Column="1"/>
                <Label Text="Cost: $15" Grid.Column="2"/>
                <Stepper x:Name="stepperTest" Grid.Column="3" IsEnabled="True" ValueChanged="ShawarmaStepper_ValueChanged" Minimum="0" Maximum="10" Increment="1" VerticalOptions="Start"/>
                <Label Text="0" x:Name="countLabel" Grid.Column="4"/>
                <Label Text="Toppings: " Grid.Row="1" Grid.Column="0"/>

            </Grid>



        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>